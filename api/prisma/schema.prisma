generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum AccountType {
  ADMIN
  USER
}

enum TokenType {
  ACCESS
  REFRESH
  RESET_PASSWORD
  VERIFY_EMAIL
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum Status{
  PRESENT
  LATE
  ABSENT
  OUTSIDE_OFFICE
}
enum RequestStatus{
  PENDING
  APPROVED
  REJECTED
}

model User {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  fullName        String
  email           String      @unique
  phone           String?
  password        String?
  dateOfBirth     DateTime?
  gender          Gender?
  currentCity     String?
  profilePic      String?
  accountType     AccountType @default(USER)
  isEmailVerified Boolean     @default(false)
  refreshToken    String?
  isActive        Boolean     @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  attendence      Attendence[]  
  leave_entitlements  Leave_entitlements[]
  leave_requests  Leave_requests[]
}

model Attendence{
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  imagePath       String
  location        Json
  userId          String
  createdAt       DateTime @default(now())
  user            User @relation(fields:[userId],references:[id] )
  status          Status
}

model LeaveType{
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  type    String
  description String?
  max_consecutive_days Int?
  createdAt DateTime @default(now())
  leave_entitlements Leave_entitlements[]
}

model Leave_entitlements{
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  leave_type_id String
  total_leaves Int
  used_leaves Int?
  remaining_leaves Int?
  user User @relation(fields:[userId],references:[id])
  leaveType LeaveType @relation(fields:[leave_type_id],references:[id])
  createdAt DateTime @default(now())
}

model Leave_requests{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  request_status RequestStatus @default(PENDING)
  createdAt DateTime @default(now())
  user User @relation(fields:[userId],references:[id])
}

